#include <stdio.h>
#include <math.h>
int calculate(int x1, int y1, int r1, int x2, int y2, int r2);
int main(void)
{
	int hmt;
	int result;
	scanf("%d", &hmt);
	int x1, y1, r1, x2, y2, r2;
	for (int i = 0; i < hmt; i++)
	{
		scanf("%d %d %d %d %d %d", &x1, &y1, &r1, &x2, &y2, &r2);
		result=calculate(x1, y1, r1, x2, y2, r2);
		printf("%d\n", result);
	}
	return 0;
}

int calculate(int x1, int y1, int r1, int x2, int y2, int r2)
{
	double ans = (double)sqrt((pow (x2 - x1, 2) + pow(y2 - y1,2)));
	if (ans <= r1 || ans <= r2)
	{
		if ((x1 == x2) && (y1 == y2) && (r1 == r2))
			return -1;
		else if ((x1 == x2) && (y1 == y2) && (r1 != r2))
			return 0;
		else
		{
			if ((ans + r1) == r2 || (ans + r2) == r1)
				return 1;
			else if ((ans + r1) < r2 || (ans + r2) < r1)
				return 0;
			else
				return 2;
		}
	}
	else
	{
		if (ans > r1 + r2)
			return 0;
		else if (ans == r1 + r2)
			return 1;
		else
			return 2;
	}

}
